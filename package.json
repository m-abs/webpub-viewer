{
  "name": "nypl-simplified-webpub-viewer",
  "version": "0.0.4",
  "author": "NYPL",
  "description": "A viewer application for web publications.",
  "repository": "https://github.com/NYPL-Simplified/webpub-viewer.git",
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.ts",
  "scripts": {
    "prepublish": "npm run build",
    "test": "rimraf lib && tsc -p tsconfig-test.json && mocha --require jsdom-global/register --recursive lib/test",
    "clean": "rimraf lib dist",
    "tsc:sw": "tsc -p tsconfig-sw.json",
    "tsc": "tsc -p .",
    "tsc:watch": "tsc -p . -w",
    "sass": "node-sass --source-map true src/styles/sass/ -o dist/styles/css/",
    "sass:watch": "node-sass --source-map true -w src/styles/sass/ -o dist/styles/css/",
    "build": "npm-run-all clean --parallel tsc sass",
    "hs": "hs ./examples",
    "watch": "npm-run-all build --parallel tsc:watch sass:watch hs"
  },
  "dependencies": {
    "parse5": "^4.0.0",
    "promise-polyfill": "^6.0.2",
    "url-polyfill": "github:webcomponents/URL",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/es6-promise": "^3.3.0",
    "@types/jquery": "^3.3.0",
    "@types/mocha": "^2.2.47",
    "@types/node": "^9.4.0",
    "@types/parse5": "^3.0.0",
    "@types/sinon": "^4.1.3",
    "chai": "^3.5.0",
    "http-server": "^0.11.1",
    "jsdom": "^11.0.0",
    "jsdom-global": "^2.1.0",
    "mocha": "^3.1.2",
    "node-sass": "4.5.0",
    "npm-run-all": "^4.1.2",
    "requirejs": "^2.3.2",
    "rimraf": "^2.6.2",
    "sinon": "^1.17.6",
    "typescript": "^2.5.2"
  }
}
